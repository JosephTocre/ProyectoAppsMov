<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#E0F7FA"   tools:context=".logros">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSleepTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sueño Relajante"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSleepSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Relájate con sonidos suaves para dormir"
        android:textSize="16sp"
        android:textColor="#212121"
        android:alpha="0.8"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSleepTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/circularProgress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        app:indicatorSize="8dp"
        app:trackThickness="4dp"
        app:trackColor="#FFD54F"   app:indicatorColor="#212121"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSleepSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/playButtonContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@id/circularProgress"
        app:layout_constraintBottom_toBottomOf="@id/circularProgress"
        app:layout_constraintStart_toStartOf="@id/circularProgress"
        app:layout_constraintEnd_toEndOf="@id/circularProgress">

        <View
            android:id="@+id/circleBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_border"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayPause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_play"
            app:iconTint="#212121" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/timerLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/playButtonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTimerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temporizador de apagado"
            android:textSize="16sp"
            android:textColor="#212121"/>

        <SeekBar
            android:id="@+id/seekBarTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="0"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTimerValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 min"
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_gravity="end"
            android:paddingTop="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>