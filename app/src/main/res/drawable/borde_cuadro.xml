<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo blanco -->
    <solid android:color="@color/naranjaclaro"/>

    <!-- Borde verde suave -->
    <stroke
        android:width="1dp"
        android:color="@color/black" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Margen interno -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
